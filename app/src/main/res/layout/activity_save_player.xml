<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_save_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/space_2"
    tools:context=".SavePlayer">

    <TextView
        android:text="GAME OVER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/gameOver"
        android:textColor="#ffff00"
        android:textSize="25sp"
        android:layout_marginBottom="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView"
        android:textColor="#ffff00"
        android:textSize="18sp"
        android:layout_marginTop="80sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Save"

        android:layout_marginTop="52dp"
        android:layout_below="@+id/time"
        android:layout_toLeftOf="@+id/time"
        android:layout_toStartOf="@+id/time"
        />

    <Button
        android:text="View All"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/btnView"
        android:layout_alignBaseline="@+id/Save"
        android:layout_alignBottom="@+id/Save"
        android:layout_toRightOf="@+id/textTime"
        android:layout_toEndOf="@+id/textTime" />

    <TextView
        android:text="Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTime"
        android:textSize="18sp"
        android:textColor="#ffff00"
        android:layout_below="@+id/txtName"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="40dp" />

    <Button
        android:text="Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Return"

        android:layout_marginTop="49dp"
        android:layout_below="@+id/Save"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/txtName"
        android:typeface="sans"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="24sp"
        android:textColor="#ffff00"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textTime"
        android:layout_alignEnd="@+id/textTime" />

</RelativeLayout>